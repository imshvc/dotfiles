# ---------------------
# function: message box response
# ---------------------
mbox () {
  echo -e '\e[31merror:\e[0m bash function \e[34mmbox\e[0m not implemented'
}
# ---------------------
# function:
#   creates a directory and navigates into it
#
# on error:
#   revert to the initial path
# ---------------------
mcd () {
  # fallback: reverting back to the initial path on error
  echo -e '\e[31merror:\e[0m bash function \e[34mmcd\e[0m not implemented'
}

# --------------------- function:
#   navigates sequentially from the current directory
#
# on error:
#   revert to the initial path
# ---------------------
cdseq () {
  echo -e '\e[31merror:\e[0m bash function \e[34mcdseq\e[0m not implemented'
}
